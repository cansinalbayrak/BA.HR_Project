
@model BA.HR_Project.WEB.Areas.Manager.Models.AddManagerViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h1 class="custom-select">DemandManager</h1>
@if (ViewBag.ErrorMessages != null)
{
    <div class="alert alert-danger">
        <p>@ViewBag.ErrorMessages</p>
    </div>
}

<div class="container">


    <form asp-area="Manager" asp-controller="Manager" asp-action="AddManager" method="post">


        <div class="mb-3">
            <label class="col-form-label text-warning" asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control custom-select" type="text" placeholder="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="col-form-label text-warning" asp-for="SecondName">SecondName</label>
            <input asp-for="SecondName" class="form-control custom-select" type="text" placeholder="SecondName" />
            <span asp-validation-for="SecondName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="col-form-label text-warning" asp-for="Surname">Surname</label>
            <input asp-for="Surname" class="form-control custom-select" type="text" placeholder="Surname" />
            <span asp-validation-for="Surname" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="col-form-label text-warning" asp-for="SecondSurname">SecondSurname</label>
            <input asp-for="SecondSurname" class="form-control custom-select" type="text" placeholder="SecondSurname" />
            <span asp-validation-for="SecondSurname" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="col-form-label text-warning" asp-for="BirthDate">BirthDate</label>
            <input asp-for="BirthDate" class="form-control custom-select" type="date" placeholder="BirthDate" />
            <span asp-validation-for="BirthDate" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="col-form-label text-warning" asp-for="BirthPlace">BirthPlace</label>
            <input asp-for="BirthPlace" class="form-control custom-select" type="text" placeholder="BirthPlace" />
            <span asp-validation-for="BirthPlace" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="col-form-label text-warning" asp-for="StartDate">StartDate</label>
            <input asp-for="StartDate" class="form-control custom-select" type="date" placeholder="StartDate" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="col-form-label text-warning" asp-for="EndDate">EndDate</label>
            <input asp-for="EndDate" class="form-control custom-select" type="date" placeholder="EndDate" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>


        <div class="mb-3">
            <label class="col-form-label text-warning" asp-for="Salary">Salary</label>
            <input asp-for="Salary" class="form-control custom-select" type="number" placeholder="Salary" />
            <span asp-validation-for="Salary" class="text-danger"></span>
        </div>


        <div class="mb-3">
            <label class="col-form-label text-warning" asp-for="IsActive">WorkingStatus</label>
            <input asp-for="IsActive" type="checkbox" placeholder="WorkingStatus" />
            <span asp-validation-for="IsActive" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="col-form-label text-warning" asp-for="IsTurkishCitizen">IsTurkishCitizen</label>
            <input asp-for="IsTurkishCitizen" type="checkbox" placeholder="IsTurkishCitizen" />
            <span asp-validation-for="IsTurkishCitizen" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="col-form-label text-warning" asp-for="IdentityNumber">IdentityNumber</label>
            <input asp-for="IdentityNumber" class="form-control custom-select" type="text" placeholder="IdentityNumber" />
            @* <span asp-validation-for="IdentityNumber" class="text-danger"></span> *@
        </div>

        <div class="mb-3">
            <label class="col-form-label text-warning" asp-for="PassportNumber">PassportNumber</label>
            <input asp-for="PassportNumber" class="form-control custom-select" type="text" placeholder="PassportNumber" />
            <span asp-validation-for="PassportNumber" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="col-form-label text-warning" asp-for="Adress">Adress</label>
            <input asp-for="Adress" class="form-control custom-select" type="text" placeholder="Adress" />
            <span asp-validation-for="Adress" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="col-form-label text-warning" asp-for="PhoneNumber">PhoneNumber</label>
            <input asp-for="PhoneNumber" class="form-control custom-select" type="number" placeholder="PhoneNumber" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>

            @*departman ve company Name drop down ile şeçilecek sonra yapılacak ıdleri bulunacak controller veya managerda*@
        </div>
        <div class="form-group">
            <label class="custom-select" asp-for="Company">Company Name</label>
            <select asp-for="CompanyId" class="form-control custom-select">
                <option value="CompanytId">-- Select Company Name --</option>
                @if (ViewBag.CompanyNames != null)
                {


                    foreach (var name in ViewBag.CompanyNames)
                    {

                        <option value="@name">@name.Split("/")[0]</option>
                    }


                }
            </select>
        </div>
       
       

        <button type="submit" class="btn btn-success">Register</button>
    </form>